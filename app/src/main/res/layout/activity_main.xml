<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manHinh"
    android:background="@drawable/bia1"
    tools:context="com.gameloft.pc.quanlythoigian.MainActivity">


    <Button
        android:id="@+id/btntkb"
        android:layout_width="195dp"
        android:layout_height="75dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:text="THỜI KHÓA BIỂU"
        android:textSize="24sp"
        android:textColor="#b10ede"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btntgb"
        android:layout_width="195dp"
        android:layout_height="75dp"
        android:layout_marginBottom="82dp"
        android:layout_marginLeft="16dp"
        android:text="THỜI GIAN BIỂU"
        android:textColor="#b10ede"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btntkb"
        app:layout_constraintVertical_bias="0.099" />


</android.support.constraint.ConstraintLayout>
